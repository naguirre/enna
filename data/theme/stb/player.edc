group {

   name: "enna/loading/anim";

   images {
      image: "loading_bg.png" COMP;
      image: "loading_top.png" COMP;
   }

   parts {
      part {
         name: "loading_bg";
         description {
            state: "default" 0.0;
            image.normal: "loading_bg.png";
            rel1 { relative: 0.5 0.5; offset: -101 -101; }
            rel2 { relative: 0.5 0.5; offset:  101  101; }
         }
      }

      part {
         name: "loading_clip";
         type: RECT;
         description {
            state: "default" 0.0;
            color: 255 255 255 0;
            visible: 0;
         }
         description {
            state: "visible" 0.0;
            color: 255 255 255 255;
            visible: 1;
         }
      }

      part {
         name: "loading_top";
         clip_to: "loading_clip";
         description {
            state: "default" 0.0;
            image.normal: "loading_top.png";
            map { on: 1; smooth: 1; }
            rel1.to: "loading_bg";
            rel2.to: "loading_bg";
         }
         description {
            state: "spin" 0.0;
            inherit: "default" 0.0;
            map.rotation.z: 360.0;
         }
      }
   }

   programs {
      program {
         name: "on_show";
         signal: "show";
         after: "anim_show";
         after: "anim_loader";
      }

      program {
         name: "on_hide";
         signal: "hide";
         action: ACTION_STOP;
         target: "anim_loader";
         target: "anim_loop";
      }

      program {
         name: "anim_show";
         action: STATE_SET "visible" 0.0;
         transition: DECELERATE 0.5;
         target: "loading_clip";
      }

      program {
         name: "anim_loader";
         action: STATE_SET "spin" 0.0;
         transition: LINEAR 0.8;
         target: "loading_top";
         after: "anim_loop";
      }

      program {
         name: "anim_loop";
         action: STATE_SET "default" 0.0;
         target: "loading_top";
         after: "anim_loader";
      }
   }
}

