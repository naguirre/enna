#define REL_BORDER_X 0.02
#define REL_BORDER_Y 0.036

group {
   name: "activity/layout/player/video";

   images {
      image: "background.png" COMP;
      image: "cover_shadow.png" COMP;
      image: "cover_reflect.png" COMP;
   }

   parts {
      part {
         name: "bg";
         type: RECT;
         description {
            state: "default" 0.0;
            color: 0 0 0 0;
         }
      }

      part {
         name: "loading_clip";
         type: RECT;
         description {
            state: "default" 0.0;
         }
         description {
            state: "video-playing";
            color: 255 255 255 0;
            visible: 0;
         }
      }

      part {
         name: "video_black_bg";
         type: RECT;
         clip_to: "video_clip";
         description {
            state: "default" 0.0;
            color: 0 0 0 255;
         }
      }

      part {
         name: "video_clip";
         type: RECT;
         description {
            state: "default" 0.0;
            color: 255 255 255 0;
            visible: 0;
         }
         description {
            state: "video-playing" 0.0;
            color: 255 255 255 255;
            visible: 1;
         }
      }

      part {
         name: "loader";
         type: GROUP;
         source: "enna/loading/anim";
         clip_to: "loading_clip";
         description {
            state: "default" 0.0;
         }
      }

      part {
         name: "video.swallow";
         type: SWALLOW;
         clip_to: "video_clip";
         description {
            state: "default" 0.0;
         }
      }

      part {
         name: "main_clip";
         type: RECT;
         description {
            state: "default" 0.0;
            color: 255 255 255 0;
            visible: 0;
         }
         description {
            state: "visible" 0.0;
            color: 255 255 255 255;
            visible: 1;
         }
      }

      part {
         name: "controls_clip";
         type: RECT;
         description {
            state: "default" 0.0;
            rel1 { relative: 0.0 1.0; offset: 0 0; }
            rel2 { relative: 1.0 1.0; offset: -1 -1; }
            color: 255 255 255 0;
            visible: 0;
         }
         description {
            state: "visible" 0.0;
            rel1 { relative: 0.0 1.0; offset: 0 -212-45; }
            rel2 { relative: 1.0 1.0; offset: -1 -1; }
            color: 255 255 255 255;
            visible: 1;
         }
      }

      alias: "time_duration.text" "controls:duration.text";
      alias: "time_current.text" "controls:time.text";
      alias: "time_end_at.text" "controls:ending.text";
      alias: "title.text" "controls:title.text";
      alias: "time.slider" "controls:slider_drag";
      part {
         name: "controls";
         type: GROUP;
         source: "enna/player/video/controls";
         clip_to: "controls_clip";
         description {
            state: "default" 0.0;
            rel1.to: "controls_clip";
            rel2.to: "controls_clip";
         }
      }

      part {
         name: "cover_clip";
         type: RECT;
         clip_to: "main_clip";
         description {
            state: "default" 0.0;
            color: 255 255 255 0;
            visible: 0;
         }
         description {
            state: "visible" 0.0;
            color: 255 255 255 255;
            visible: 1;
         }
      }

    
      part {
         name: "cover.shadow";
         type: IMAGE;
         clip_to: "cover_clip";
         description {
            rel1.to: "cover.swallow";
            rel1.offset: -51 -51;
            rel2.to: "cover.swallow";
            rel2.offset: 50 50;
            color: 0 0 0 255;
            image.normal: "cover_shadow.png";
            image.border: 51 51 51 51;
         }
      }
      part {
         name: "cover.border";
         clip_to: "cover_clip";
         type: RECT;
         description {
            rel1.to: "cover.swallow";
            rel1.offset: -1 -1;
            rel2.to: "cover.swallow";
            rel2.offset: 0 0;
            color: 0 0 0 255;
         }
      }
      part {
         name: "cover.swallow";
         clip_to: "cover_clip";
         type: SWALLOW;
         description {
            align: 0.5 0.5;
            rel1 { relative: 0.0 0.0; offset: 38 -108; to: "controls"; }	
            rel2 { relative: 0.0 0.0; offset: 254 208;  to: "controls"; }
            //            rel1 { relative: 0.0 -0.3; offset: 16 0;to: "controls"; }
            //            rel2 { relative: 0.3 0.7; to: "controls"; }
            aspect: 0.5 1;
            fixed: 1 1;
         }
      }
      part {
         name: "cover.reflect";
         clip_to: "cover_clip";
         type: IMAGE;
         description {
            rel1.to: "cover.swallow";
            rel2.to: "cover.swallow";
            rel2.relative: 1.0 0.5;
            image.normal: "cover_reflect.png";
            color: 255 255 255 10;
         }
      }
   

   }

   programs {
      program {
         name: "show_osd";
         signal: "show,osd";
         source: "enna";
         action: STATE_SET "visible" 0.0;
         transition: DECELERATE 1.0;
         target: "controls_clip";
         target: "main_clip";
      }

      program {
         name: "hide_osd";
         signal: "hide,osd";
         source: "enna";
         action: STATE_SET "default" 0.0;
         transition: DECELERATE 1.0;
         target: "controls_clip";
         target: "main_clip";
      }

      program {
         name: "show_cover";
         signal: "show,cover";
         source: "enna";
         action: STATE_SET "visible" 0.0;
         transition: DECELERATE 1.0;
         target: "cover_clip";
      }

      program {
         name: "hide_cover";
         signal: "hide,cover";
         source: "enna";
         action: STATE_SET "default" 0.0;
         transition: DECELERATE 1.0;
         target: "cover_clip";
      }

      program {
         name: "loading";
         signal: "loading";
         source: "enna";
         action: STATE_SET "default" 0.0;
         transition: DECELERATE 1.0;
         target: "video_clip";
         target: "loading_clip";
      }

      program {
         name: "playing";
         signal: "playing";
         source: "enna";
         action: STATE_SET "video-playing" 0.0;
         transition: DECELERATE 1.0;
         target: "video_clip";
         target: "loading_clip";
      }

   }
}

